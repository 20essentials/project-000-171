{# layout.njk o index.njk #}
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ title or "AjexCube" }}</title>
  <meta name="google" content="notranslate">
  <link rel="shortcut icon" href="{{ favicon or 'assets/favicon.webp' }}" type="image/x-icon">
  <style>
  *,
  *::after,
  *::before {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
    -webkit-tap-highlight-color: transparent;
  }

  html {
    scroll-behavior: smooth;
    scrollbar-width: thin;
    scrollbar-color: white transparent;
  }

  body {
    height: 100dvh;
    display: flex;
    flex-wrap: wrap;
    place-content: center;
  }

  .face {
    height: 100dvh;
    width: 100%;
    background: linear-gradient(45deg, #222 25%, transparent 25%),
                linear-gradient(-45deg, #222 25%, transparent 25%),
                linear-gradient(45deg, transparent 75%, #222 25%),
                linear-gradient(-45deg, transparent 75%, #222 25%);
    background-size: 100px 100px, 200px 200px;
    transition: background-color .5s ease;
    animation: changeBg 1s linear infinite;
    --length1: 100px;
    --length2: 200px;
  }

  @media (width <= 1000px) {
    .face {
      --length1: 50px;
      --length2: 100px;
    }
  }

  @keyframes changeBg {
    0% {
      background-color: orange;
      background-size: var(--length1) var(--length1), var(--length2) var(--length2);
    }

    100% {
      background-color: transparent;
      background-size: var(--length2) var(--length2), var(--length1) var(--length1);
    }
  }
  </style>
</head>

<body>
  <section class="face"></section>
</body>

</html>
